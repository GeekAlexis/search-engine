<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>edu.upenn.cis455</groupId>
  <artifactId>indexer</artifactId>
  <name>CIS 455 Indexer</name>
  <version>1.0-SNAPSHOT</version>
  <url>http://www.cis.upenn.edu/~cis455</url>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <archive>
                <manifest>
                  <addClasspath>true</addClasspath>
                  <classpathPrefix>lib/</classpathPrefix>
                  <mainClass>edu.upenn.cis455.IndexDriver</mainClass>
                </manifest>
              </archive>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.6.0</version>
        <executions>
          <execution>
            <id>server</id>
            <goals>
              <goal>java</goal>
            </goals>
          </execution>
          <execution>
            <id>indexer</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>edu.upenn.cis455.IndexDriver</mainClass>
              <arguments>
                <argument>s3://indexer-mapreduce/in/</argument>
                <argument>s3://indexer-mapreduce/out/</argument>
                <argument>temp</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>uploader</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>edu.upenn.cis455.IndexUploader</mainClass>
              <arguments>
                <argument>indexer-mapreduce</argument>
                <argument>merged-index</argument>
                <argument>jdbc:postgresql://database-1.cnw1rlie1jes.us-east-1.rds.amazonaws.com:5432/postgresdb</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <mainClass>edu.upenn.cis455.WebInterface</mainClass>
          <arguments>
            <argument>45555</argument>
          </arguments>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>com.amazonaws</groupId>
        <artifactId>aws-java-sdk-bom</artifactId>
        <version>1.11.1000</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <properties>
    <maven.compiler.target>11</maven.compiler.target>
    <java.version>11</java.version>
    <maven.compiler.source>11</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>

